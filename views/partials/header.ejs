<div class="container">
	<header
		class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom"
	>
		<a
			href="/"
			class="d-flex align-items-center mb-0 me-auto link-body-emphasis text-decoration-none"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				fill="currentColor"
				class="bi bi-chat-left-quote me-2"
				viewBox="0 0 16 16"
			>
				<path
					d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"
				></path>
				<path
					d="M7.066 4.76A1.665 1.665 0 0 0 4 5.668a1.667 1.667 0 0 0 2.561 1.406c-.131.389-.375.804-.777 1.22a.417.417 0 1 0 .6.58c1.486-1.54 1.293-3.214.682-4.112zm4 0A1.665 1.665 0 0 0 8 5.668a1.667 1.667 0 0 0 2.561 1.406c-.131.389-.375.804-.777 1.22a.417.417 0 1 0 .6.58c1.486-1.54 1.293-3.214.682-4.112z"
				></path>
			</svg>
			<span class="fs-4">On The Blog</span>
		</a>
		<% if (locals.link && locals.button) { %>
		<ul class="nav nav-pills">
			<li class="nav-item">
				<a href="<%= link %>" class="nav-link active"> <%= button %> </a>
			</li>
		</ul>
		<% }else{ %>
		<ul class="nav nav-pills">
			<li class="nav-item">
				<a href="/blog" class="nav-link active">New Blog</a>
			</li>
		</ul>
		<% } %>
	</header>
</div>
